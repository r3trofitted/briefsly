<main id="my-schedule" class="resource">
  <h1 class="page-title">
    <span>Schedule</span>
  </h1>
  <% if @schedule.hosting_jams.suggested.any? %>
    <p>
      You've been invited to jams!
    </p>
  <% end %>

  <% if @schedule.empty? %>
  <p>
    It seems that your schedule is empty! You should <%= link_to "open up slots", repositories_path %> or 
    <%= link_to "search for pairing buddies", slots_path %>.
  </p>
  <% else %>
    <section id="my-schedule-slots" class="wavy-section">
      <h2 class="wavy-section-title">Slots</h2>
      <% if @schedule.slots.any?%>
        <%= render @schedule.slots %>
      <% else %>
        <p>
          You have no open slot! You should <%= link_to "open one", new_slot_path %>!
        </p>
      <% end %>
    </section>
    
    <section id="my-schedule-jams" class="wavy-section">
      <h2 class="wavy-section-title">Jams</h2>
      <%= render @schedule.jams %>
    </section>
  <% end %>
</main>
